<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:YourNamespace"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Добавляем StackPanel для размещения переключателей -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <!-- Первый переключатель -->
            <local:CustomToggle x:Name="toggle1" Margin="0,0,0,20"/>
            <Label Name="label1" Content="Выключен" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Второй переключатель -->
            <local:CustomToggle x:Name="toggle2" Margin="0,0,0,20"/>
            <Label Name="label2" Content="Выключен" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20"/>
        </StackPanel>
    </Grid>
</Window>
